{% extends 'layout/layout.twig' %}

{% block title %}
<title>S'enregistrer</title>
{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-sm-6">

            {% if success == true %}
            <div class="alert alert-success" role="alert">
                <center>Merci pour votre inscription !</center>
            </div>
            {% elseif errors|length > 0 %}
            <div class="alert alert-danger" role="alert">
                <center>
                    {% for error in errors %}
                    <li>{{ error }}</li>
                    {% endfor %}
                </center>
            </div>
            {% endif %}

            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Inscrivez-vous !</h5>
                    <form class="form-register" method="post">
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" id="firstname" name="firstname" placeholder="Votre prénom"
                                value="{{ data.firstname }}" class="form-control ftext" required>
                        </div>

                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" id="lastname" name="lastname" placeholder="Votre nom"
                                value="{{ data.lastname }}" class="form-control ftext" required>
                        </div>

                        <div class="form-group">
                            <label for="email">Adresse e-mail</label>
                            <input type="email" id="email" name="email" class="form-control ftext"
                                placeholder="Votre email" value="{{ data.email }}" required>

                            <small class="form-text text-danger">{{ error.email }}</small>
                        </div>

                        <div class="form-group">
                            <label for="username">Pseudonyme</label>
                            <input type="text" id="username" name="username" placeholder="Votre pseudo"
                                value="{{ data.username }}" class="form-control ftext" required>
                        </div>

                        <hr>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="password" placeholder="******"
                                class="form-control ftext" required>
                        </div>

                        <div class="form-group">
                            <label for="passwordconfirm">Confirmer mot de passe</label>
                            <input type="password" id="passwordconfirm" name="passwordconfirm" placeholder="******"
                                class="form-control ftext" required>
                        </div>

                        <hr>

                        <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit">S'enregistrer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Login Form -->
        <div class="col-sm-6">

            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Connectez-vous !</h5>
                    <form class="form-group connect" method="post" action="?page=user!login">
                        <div class="form-group">
                            <label for="emaillog" class="col-form-label">Votre adresse e-mail</label>
                            <input class="form-control ftext" id="emaillog" name="emaillog" type="email"
                                value="{{ email }}" placeholder="Email" required>
                        </div>

                        <div class="form-group">
                            <label for="passwordlog" class="form-label">Votre mot de passe</label>
                            <input class="form-control ftext" id="passwordlog" name="passwordlog" type="password"
                                placeholder="******" required>
                        </div>

                        <hr>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

{% endblock %}